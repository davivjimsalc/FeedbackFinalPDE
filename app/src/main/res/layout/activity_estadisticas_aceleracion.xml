<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EstadisticasAceleracionActivity">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvPromedio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Promedio de aceleración: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvMaxima"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Máxima aceleración: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvTiempoTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiempo total de movimiento: "
            android:textSize="18sp" />
        <Button
            android:id="@+id/btnVolver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Volver"
            android:layout_gravity="center" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>